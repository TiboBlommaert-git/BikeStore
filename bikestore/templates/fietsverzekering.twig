<script>

    const form = document.getElementById('myForm');
    const submitButton = document.getElementById('submitButton');

    submitButton.addEventListener('click', function(event) {
        event.preventDefault();
        
        if (validateForm()) {
            form.submit();
        } else {
        }
    });

    function validateForm() {
        let isValid = true;

        const voornaam = document.getElementById('voornaam').value.trim();
        const voornaamError = document.getElementById('voornaamError');
        const achternaam = document.getElementById('achternaam').value.trim();
        const achternaamError = document.getElementById('achternaamError');
        const telefoonnummer = document.getElementById('telefoonnummer').value.trim();
        const telefoonnummerError = document.getElementById('telefoonnummerError');
        const email = document.getElementById('email').value.trim();
        const emailError = document.getElementById('emailError');

        if (voornaam === '') {
            voornaamError.classList.remove('hidden');
            isValid = false;
        } else {
            voornaamError.classList.add('hidden');
        }
        if (achternaam === '') {
            achternaamError.classList.remove('hidden');
            isValid = false;
        } else {
            achternaamError.classList.add('hidden');
        }
         if (telefoonnummer === '') {
            telefoonnummerError.classList.remove('hidden');
            isValid = false;
        } else {
            telefoonnummerError.classList.add('hidden');
        }
         if (email === '') {
            emailError.classList.remove('hidden');
            isValid = false;
        } else {
            emailError.classList.add('hidden');
        }
        return isValid;
    }
</script>



