<script>

    const form = document.getElementById('myForm');
    const submitButton = document.getElementById('submitButton');

    submitButton.addEventListener('click', function(event) {
        event.preventDefault();
        
        if (validateForm()) {
            form.submit();
        } else {
        }
    });

    function validateForm() {
    let isValid = true;

    const naam = document.getElementById('naam').value.trim();
    const naamError = document.getElementById('naamError');
    const onderwerp = document.getElementById('onderwerp').value.trim();
    const onderwerpError = document.getElementById('onderwerpError');
    const telefoon = document.getElementById('telefoon').value.trim();
    const telefoonError = document.getElementById('telefoonError');
    const email = document.getElementById('email').value.trim();
    const emailError = document.getElementById('emailError');
    const bericht = document.getElementById('bericht').value.trim();
    const berichtError = document.getElementById('berichtError');

    if (naam === '') {
        naamError.classList.remove('hidden');
        isValid = false;
    } else {
        naamError.classList.add('hidden');
    }

    if (onderwerp === '') {
        onderwerpError.classList.remove('hidden');
        isValid = false;
    } else {
        onderwerpError.classList.add('hidden');
    }

    if (telefoon === '') {
        telefoonError.classList.remove('hidden');
        isValid = false;
    } else {
        telefoonError.classList.add('hidden');
    }

    if (email === '') {
        emailError.classList.remove('hidden');
        isValid = false;
    } else {
        emailError.classList.add('hidden');
    }

    if (bericht === '') {
        berichtError.classList.remove('hidden');
        isValid = false;
    } else {
        berichtError.classList.add('hidden');
    }

    return isValid;
}

</script>

